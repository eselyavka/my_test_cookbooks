  <value><%= node['cdh_kerberos_cookbook']['tls']['keystore']['file']%></value>
</property>

<property>
  <name>ssl.server.keystore.password</name>
  <value><%= node['cdh_kerberos_cookbook']['tls']['keystore']['passwd']%></value>
