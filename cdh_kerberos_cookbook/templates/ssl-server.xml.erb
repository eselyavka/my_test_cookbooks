<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

<property>
  <name>ssl.server.truststore.location</name>
  <value><%= node['cdh_kerberos_cookbook']['tls']['truststore']['file']%></value>
</property>

<property>
  <name>ssl.server.truststore.password</name>
  <value><%= node['cdh_kerberos_cookbook']['tls']['truststore']['passwd']%></value>
</property>

<property>
